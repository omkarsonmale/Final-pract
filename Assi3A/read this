  This is our normal page:-const express =require("express");
const app= express()
app.get("/",(req,res)=>{
    //console.log("hello from root side server is running"); this runs in terminal
    res.send("hii this runs on server")
})

app.listen(5001,()=>{
    console.log("server is running on port 5001");
})    

